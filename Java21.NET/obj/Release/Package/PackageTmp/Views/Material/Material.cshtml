@{
    ViewBag.Title = Model.title + "-资料下载";
    Layout = "~/Views/Shared/_LayoutJava.cshtml";
}@section head{
    <link href="/css/article.css" rel="stylesheet" />}
<div class="container">
    <div class="container-fluid" style="margin:20px auto; text-align:center;">
        <table class="table download-list">
            <tr>
                <td colspan="2" class="text-center">
                    <img src="/images/books.png" />
                    <div style="display:inline-table; text-align:left; margin:10px;">
                        @Model.title<br />
                        <span class="gray small">@Model.remark</span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>时间</td>
                <td>@Html.Raw(Convert.ToDateTime(Model.cdate).ToString("yyyy年MM月dd日"))</td>
            </tr>
            <tr>
                <td>访问地址</td>
                <td><a href="@Model.url" target="_blank">@Model.url</a></td>
            </tr>
            @if (!Model.psd.Equals("")) { 
            <tr>
                <td>访问密码</td>
                <td>@Model.psd</td>
            </tr>}
            <tr>
                <td>下载次数</td>
                <td>@Model.download</td>
            </tr> 
            <tr>
                <td colspan="2" class="small text-left"><span class="text-error">*</span>获取访问密码需要VIP以上等级的用户，获取VIP资格请加Q群<a target="_blank" href="http://shang.qq.com/wpa/qunwpa?idkey=c0b797c0c7785eee78cd518965e8ce12360b70b030ccb8d37d4f57a4fbd204d8">222876252</a>，然后向群主索取。</td>
            </tr>
        </table>
    </div>
</div>